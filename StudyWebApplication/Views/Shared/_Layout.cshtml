@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <title>@ViewData["Title"] - StudyWebApplication</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudyWebApplication</a>
                <ul class="nav navbar-nav" style="float:left">
                    <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Note" asp-action="Index">게시판</a></li>
                </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav" style="float:right">
                        @if (Context.Session.GetInt32("USER_LOGIN_KEY") == null)
                        {
                            <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">로그인</a></li>
                            <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Register">회원가입</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Logout">로그아웃</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - StudyWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
