@model StudyWebApplication.ViewModels.NoteIndexCreate

<form style="display: flex; flex-direction:column;" method="post" asp-controller="Note" asp-action="Create">
    <div class="form-group">
        <label>제목</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="제목을 입력하세요" autofocus />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label>내용</label>
        <textarea class="form-control" rows="15" asp-for="Contents" placeholder="내용을 입력하세요"></textarea>
        <span class="text-danger" asp-validation-for="Contents"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">작성</button>
    </div>
</form>
